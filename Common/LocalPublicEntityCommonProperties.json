{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$comment": "This JSON file provides regex patterns for local public entities.",
    "definitions": {
        "StandardTransliteration": {
            "type": "string",
            "pattern": "^[a-zA-Z]*$",
            "$comment": "regex pattern for Standard Transliteration."
        },
        "PhoneticTransliteration": {
            "type": "string",
            "pattern": "^[a-zA-ZÔô]*$",
            "comment": "regex pattern for Phonetic Transliteration."
        },
        "ZenkakuRegexPattern": {
            "type": "string",
            "pattern": "^[ァ-ヿ]*$",
            "description": "全角カナ、拗音・促音は小書き"
        },
        "HankakuRegexPattern":{
            "type": "string",
            "pattern": "^[ｦ-ﾟ]*$",
            "description": "半角カナ、拗音・促音は大書き"
        },
        "PrefectureBase":{ 
            "type": "object",
            "properties": {
                "prefecture_code": {
                    "$ref": "/prefecture_code.json#definitions/prefecture_code"
                },
                "prefecture_name": {
                    "$ref": "#/definitions/prefecture_namepattern"
                }
                },
                "required": ["prefecture_name"]
            }
        }
    }